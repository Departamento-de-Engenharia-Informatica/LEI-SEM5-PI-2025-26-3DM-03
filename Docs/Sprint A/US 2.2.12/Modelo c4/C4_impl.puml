@startuml C4_Manage_Resources_Implementation_View
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

Container(api, "Port API", "ASP.NET Core Web API")

Component(controller, "ResourcesController", "Controller", "Defines endpoints for managing Resources (GET, POST, PUT, PATCH)")
Component(service, "ResourceService", "Service", "Contains business logic for Resource management")
Component(repository, "EfResourceRepository", "Repository", "Handles data persistence via EF Core")
Component(mapper, "ResourceMapper", "Mapper", "Maps DTOs to domain models and vice versa")
Component(dbcontext, "PortContext", "DbContext", "Entity Framework Core context")

Rel(controller, service, "calls")
Rel(service, mapper, "uses for conversion")
Rel(service, repository, "uses")
Rel(repository, dbcontext, "reads/writes")

SHOW_LEGEND()
@enduml