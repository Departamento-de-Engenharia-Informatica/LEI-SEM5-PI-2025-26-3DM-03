operator -> api : 7. PATCH /api/Staff/{mecanographic}/deactivate
api --> operator : 8. 204 No Content

operator -> api : 9. GET /api/Staff?search={text}&filterBy={status}
api --> operator : 10. 200 OK ([StaffDTO])

