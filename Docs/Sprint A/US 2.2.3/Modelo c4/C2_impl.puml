@startuml C2_Manage_Docks_Implementation_View
title C2 – Manage Docks (Implementation / Package View)
left to right direction
hide empty members

skinparam package {
  BackgroundColor White
  BorderColor Black
  FontColor Black
  FontStyle bold
}
skinparam arrow {
  Color Black
}

' ======================
' Pacotes (lado a lado)
' ======================

together {
  package "Controllers" as P_Controllers {
    package "Docks" as P_Controllers_Docks {
      [DocksController]
    }
  }
}

together {
  package "Models" as P_Models {
    package "Docks" as P_Models_Docks {
      [Dock]
      [DockDTO]
      [CreateDockDTO]
      [UpdateDockDTO]
      [DockMapper]
    }
  }
}

together {
  package "Data" as P_Data {
    [PortContext]
  }
}

' ======================
' Dependências
' ======================

[DocksController] --> [DockMapper] : usa para conversões
[DocksController] --> [PortContext] : acede à BD (EF Core)

[DockMapper] --> [Dock] : mapeia entidades
[DockMapper] --> [DockDTO] : mapeia DTOs
[DockMapper] --> [CreateDockDTO]
[DockMapper] --> [UpdateDockDTO]

@enduml

