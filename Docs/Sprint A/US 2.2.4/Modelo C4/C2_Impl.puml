@startuml C2_Manage_Storage_Areas_Implementation_View
title C2 – Manage Storage Areas (Implementation / Package View)
left to right direction
hide empty members

skinparam package {
  BackgroundColor White
  BorderColor Black
  FontColor Black
  FontStyle bold
}
skinparam arrow {
  Color Black
}

' ======================
' Pacotes (lado a lado)
' ======================

together {
  package "Controllers" as P_Controllers {
    package "StorageAreas" as P_Controllers_StorageAreas {
      [StorageAreasController]
    }
  }
}

together {
  package "Models" as P_Models {
    package "StorageAreas" as P_Models_StorageAreas {
      [StorageArea]
      [StorageAreaDTO]
      [CreateStorageAreaDTO]
      [UpdateStorageAreaDTO]
      [StorageAreaMapper]
    }
  }
}

together {
  package "Data" as P_Data {
    [PortContext]
  }
}

' ======================
' Dependências
' ======================

[StorageAreasController] --> [StorageAreaMapper] : usa para conversões
[StorageAreasController] --> [PortContext] : acede à BD (EF Core)

[StorageAreaMapper] --> [StorageArea] : mapeia entidades
[StorageAreaMapper] --> [StorageAreaDTO] : mapeia DTOs
[StorageAreaMapper] --> [CreateStorageAreaDTO]
[StorageAreaMapper] --> [UpdateStorageAreaDTO]

@enduml

