left to right direction
skinparam actorStyle awesome
skinparam usecase {
  BorderColor #777
  BackgroundColor #EEE
  ArrowColor #555
}

' === Actors ===
actor "Port Authority Officer" as PAO
actor "Shipping Agent Representative" as SAR
actor "Logistics Operator" as LO
actor "Administrator" as ADM
actor "External IAM Provider" as IAM

rectangle "Port Logistics Management System (PLMS)" as System {

  ' === Authentication & Admin ===
  usecase "User Authentication & Authorization" as UC_AUTH
  usecase "Manage Users & Roles" as UC_ADMIN

  ' === Port Authority ===
  usecase "Manage Reference Data\n(Vessel Types, Docks, Storage Areas)" as UC_REF
  usecase "Register Shipping Agents\n& Representatives" as UC_SA
  usecase "Review & Approve Vessel Visit Notifications" as UC_VVN_APPROVE

  ' === Shipping Agent ===
  usecase "Manage Vessels" as UC_VESSEL
  usecase "Create & Submit Vessel Visit Notifications" as UC_VVN
  usecase "Attach Cargo Manifests & Crew Info" as UC_MANIFEST

  ' === Logistics Operator ===
  usecase "Manage Staff & Qualifications" as UC_STAFF
  usecase "Manage Equipment / Resources" as UC_RES
  usecase "Plan & Monitor Operations" as UC_OPS
}

' === Relationships ===
' Authentication
IAM --> UC_AUTH
PAO --> UC_AUTH
SAR --> UC_AUTH
LO  --> UC_AUTH
ADM --> UC_AUTH

' Admin
ADM --> UC_ADMIN

' Port Authority
PAO --> UC_REF
PAO --> UC_SA
PAO --> UC_VVN_APPROVE

' Shipping Agent
SAR --> UC_VESSEL
SAR --> UC_VVN
SAR --> UC_MANIFEST

' Logistics Operator
LO --> UC_STAFF
LO --> UC_RES
LO --> UC_OPS

@enduml
